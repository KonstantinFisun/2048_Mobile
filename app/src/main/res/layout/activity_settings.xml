<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center|center_horizontal|center_vertical"
    tools:context=".Settings">

    <Button
        android:id="@+id/apply"
        android:layout_width="340dp"
        android:layout_height="55dp"
        android:layout_marginTop="52dp"
        android:rotationX="20"
        android:text="применить"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="410dp"
        android:layout_height="36dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/comic_neue"
        android:gravity="center_horizontal|center_vertical"
        android:text="Шанс появления &quot;2&quot;"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="410dp"
        android:layout_height="36dp"
        android:layout_marginStart="1dp"
        android:fontFamily="@font/comic_neue"
        android:gravity="center_horizontal|center_vertical"
        android:text="Размер поля"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="410dp"
        android:layout_height="52dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/comic_neue"
        android:gravity="center_horizontal|center_vertical"
        android:text="Параметры"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/reset_bd"
        android:layout_width="340dp"
        android:layout_height="55dp"
        android:layout_marginTop="68dp"
        android:rotationX="20"
        android:text="@string/reset_bd"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/apply" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="430dp"
        android:layout_height="101dp"
        android:background="@color/bizarre"
        android:rotation="0"
        android:rotationX="0"
        android:text="@string/title_2048"
        android:textAlignment="center"
        android:textSize="70sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="434dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10">

        <GridView
            android:id="@+id/levels"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnWidth="70dip"
            android:gravity="center"
            android:listSelector="@drawable/textview_border"
            android:stretchMode="spacingWidthUniform"
            android:textAlignment="center"
            android:verticalSpacing="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            tools:ignore="DuplicateSpeakableTextCheck" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="434dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11">

        <GridView
            android:id="@+id/levels2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnWidth="70dip"
            android:gravity="center"
            android:listSelector="@drawable/textview_border"
            android:numColumns="3"
            android:stretchMode="spacingWidthUniform"
            android:textAlignment="center"
            android:verticalSpacing="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>